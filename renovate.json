{
    "extends": [
        "config:base"
    ],
    "pinDigests": true,
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "prHourlyLimit": 0,
    "labels": [
        "renovate-bot"
    ],
    "prConcurrentLimit": 3,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "rebaseWhen": "behind-base-branch",
    "regexManagers": [
        {
            "fileMatch": [
                "^.github/workflows/check.yml$"
            ],
            "matchStrings": [
                " version: (?<currentValue>.*?)\n"
            ],
            "depNameTemplate": "golangci/golangci-lint",
            "datasourceTemplate": "github-tags"
        }
    ]
}